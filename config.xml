<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"

        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        version     = "1.0.0"
        versionCode = "10" >

        <!-- versionCode is optional and Android only -->

        <preference name="phonegap-version" value="3.5.0" />

        <name>Baby Sliding Puzzle</name>

        <description>
        Its a puzzle game. 
        </description>

        <author href="http://www.webflax.in/" email="shubhamjaiswal1860@gmail.com">
        Shubham Jaiswal
        </author>
		
		<icon src="favicon.png" />
    <icon src="favicon.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="favicon.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="favicon.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="favicon.png"  gap:platform="android"    gap:density="xhdpi" />
    <icon src="favicon.png"  gap:platform="winphone" />
    
    <platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="favicon.png" density="land-hdpi"/>
    <splash src="favicon.png" density="land-ldpi"/>
    <splash src="favicon.png" density="land-mdpi"/>
    <splash src="favicon.png" density="land-xhdpi"/>

    <splash src="favicon.png" density="port-hdpi"/>
    <splash src="favicon.png" density="port-ldpi"/>
    <splash src="favicon.png" density="port-mdpi"/>
    <splash src="favicon.png" density="port-xhdpi"/>
</platform>
<preference name="SplashScreenDelay" value="10000" />
    

    </widget>
